@model IEnumerable<JobPostLibrary.Models.JobPost>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Job Post</h1>

<p>
    <a asp-action="Create">Create New Job Post</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vacancies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacancies)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  pid=item.PostId}) |
                @Html.ActionLink("Details", "Details", new {  pid=item.PostId})|
                @Html.ActionLink("Delete", "Delete", new {  pid=item.PostId })|
                    @Html.ActionLink("Get By Post Date", "GetByPostDate", new { pdate = item.PostDate })|
                    @Html.ActionLink("Get By Last Date", "GetByLastDate", new { ldate = item.LastDate })|
                    @Html.ActionLink("Get By Job Id", "GetByJobId", new { jid = item.JobId}) |
                    @Html.ActionLink("Job Details", "JobDetails",new{jid=item.JobId})



            </td>
        </tr>
}
    </tbody>
</table>
