@model IEnumerable<ApplyJobLibrary.Models.ApplyJob>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Applications</h1>

<p>
    <a asp-action="Create">Apply New Job</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppliedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppliedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationStatus)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { postId=item.PostId,empId=item.EmpId }) |
                    @Html.ActionLink("Details", "Details", new { postId = item.PostId, empId = item.EmpId }) |
                    @Html.ActionLink("Delete", "Delete", new { postId = item.PostId, empId = item.EmpId })|
                    @Html.ActionLink("Get By Employee Id","GetDetailsByEmpId",new{empId=item.EmpId})|
                    @Html.ActionLink("Get By Post Id","GetDetailsByPostId",new{postId=item.PostId})|
                    @Html.ActionLink("Get By Applied Date","GetDetailsByAppliedDate",new{appliedDate=item.AppliedDate.ToLongDateString()})|
                    @Html.ActionLink("Get By Status","GetByStatus",new{status=item.ApplicationStatus})

            </td>
        </tr>
}
    </tbody>
</table>
