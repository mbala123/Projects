@model TaskLibrary.Models.TaskList

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1 class="display-4 text-center" style="font-weight:bold">Delete Task</h1>
    <div class="card mt-4">
        <div class="card-body">
            <h3 class="card-title">Are you sure you want to delete this task?</h3>
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Task Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TaskName)</dd>
                        <dt class="col-sm-4">Task Description</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TaskDescription)</dd>
                        <dt class="col-sm-4">Task Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TaskDate)</dd>
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.StatusLookUp.StatusType)</dd>
                        <dt class="col-sm-4">Priority</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PriorityLookUp.PriorityType)</dd>
                    </dl>
                </div>
            </div>
            <div class="mt-4">
                <form asp-action="Delete">
                    <input type="submit" value="Delete" class="btn btn-danger mr-2" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>
